<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ui.fragment.CategoryFragment">
    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp" app:cardCornerRadius="10dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/cardView2"
            app:layout_constraintEnd_toStartOf="@+id/guideline2" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline3">
        <TextView
                android:text="@string/aperitifs"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView" android:textStyle="bold"
                android:textSize="18sp" android:textColor="@color/colorPrimaryDark" android:layout_margin="16dp"/>
        <ImageView
                android:src="@drawable/ic_tacos"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" android:id="@+id/imageViewAperitif" android:layout_margin="16dp"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/buttonApero"
                android:background="@color/fui_transparent"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp" app:cardCornerRadius="10dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:id="@+id/cardView4"
            app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline3">
        <TextView
                android:text="@string/entree"
                android:layout_width="wrap_content" android:layout_gravity="bottom"
                android:layout_height="wrap_content" android:id="@+id/textView5" android:textStyle="bold"
                android:textSize="18sp" android:textColor="@color/colorPrimaryDark" android:layout_margin="16dp"/>
        <ImageView
                android:src="@drawable/ic_eggh"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" android:id="@+id/imageViewEntre" android:layout_margin="16dp"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/buttonEntre"
                android:background="@color/fui_transparent"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp" app:cardCornerRadius="10dp"
            android:id="@+id/cardView6" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline3" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline4">
        <TextView
                android:text="@string/plats"
                android:layout_width="wrap_content" android:layout_gravity="bottom"
                android:layout_height="wrap_content" android:id="@+id/textView6" android:textStyle="bold"
                android:textSize="18sp" android:textColor="@color/colorPrimaryDark" android:layout_margin="16dp"/>
        <ImageView
                android:src="@drawable/ic_hotpeasf"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" android:id="@+id/imageViewPlat" android:layout_margin="16dp"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/buttonPlat"
                android:background="@color/fui_transparent"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp" app:cardCornerRadius="10dp"
            android:id="@+id/cardView7" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline3" app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline4">
        <TextView
                android:text="@string/viandes" android:layout_gravity="bottom"


                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView7" android:textStyle="bold"
                android:textSize="18sp" android:textColor="@color/colorPrimaryDark" android:layout_margin="16dp"/>
        <ImageView
                android:src="@drawable/ic_meat"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" android:id="@+id/imageViewMeat" android:layout_margin="16dp"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/buttonMeat"
                android:background="@color/fui_transparent"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp" app:cardCornerRadius="10dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline4" app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline5">
        <TextView
                android:text="@string/vege" android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView9" android:textStyle="bold"
                android:textSize="18sp" android:textColor="@color/colorPrimaryDark" android:layout_margin="16dp"/>
        <ImageView
                android:src="@drawable/ic_carrot"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" android:id="@+id/imageViewVege" android:layout_margin="16dp"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/buttonVege"
                android:background="@color/fui_transparent"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp" app:cardCornerRadius="10dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline4" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline5">
        <TextView
                android:text="@string/poissons"
                android:layout_width="wrap_content" android:layout_gravity="bottom"
                android:layout_height="wrap_content" android:id="@+id/textView10" android:textStyle="bold"
                android:textSize="18sp" android:textColor="@color/colorPrimaryDark" android:layout_margin="16dp"/>
        <ImageView
                android:src="@drawable/ic_fish"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" android:id="@+id/imageViewFish" android:layout_margin="16dp"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/buttonFish"
                android:background="@color/fui_transparent"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="10dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline5" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent">
        <TextView
                android:text="@string/dessert"
                android:layout_width="wrap_content" android:layout_gravity="bottom"
                android:layout_height="wrap_content" android:id="@+id/textView11" android:textStyle="bold"
                android:textSize="18sp" android:textColor="@color/colorPrimaryDark" android:layout_margin="16dp"/>
        <ImageView
                android:src="@drawable/ic_cupcake"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" android:id="@+id/imageViewDessert" android:layout_margin="16dp"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/buttonCake"
                android:background="@color/fui_transparent"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline5" app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:cardCornerRadius="10dp">
        <TextView
                android:text="@string/smoothie"
                android:layout_width="wrap_content" android:layout_gravity="bottom"
                android:layout_height="wrap_content" android:id="@+id/textView12" android:textStyle="bold"
                android:textSize="18sp" android:textColor="@color/colorPrimaryDark" android:layout_margin="16dp"/>
        <ImageView
                android:src="@drawable/ic_smoothie"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" android:id="@+id/imageViewSmoothie" android:layout_margin="16dp"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/buttonSmoothie"
                android:background="@color/fui_transparent"/>
    </androidx.cardview.widget.CardView>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_percent="0.5" android:id="@+id/guideline2"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_percent="0.25" android:id="@+id/guideline3"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            app:layout_constraintGuide_percent="0.5"
            android:layout_height="wrap_content" android:id="@+id/guideline4"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            app:layout_constraintGuide_percent="0.75"
            android:layout_height="wrap_content" android:id="@+id/guideline5"/>
</androidx.constraintlayout.widget.ConstraintLayout>